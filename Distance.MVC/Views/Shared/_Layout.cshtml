@using Distance.Business
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Distance Comparison</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#187441;" >
        <div class="container" style="padding:10px;">
            <div class="col-md-10">
            @RenderSection("TopMenu", required: false)    
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr style="margin-bottom:3px;" />
        <footer>
            <spanp>&copy; @DateTime.Now.Year - ehi.com</spanp>

            @if (Session["IsAuthorized"] != null)
            {
            <a class="btn btn-default btn-xs pull-right" href="@Url.Action("Logout","Home")">
                log out <span class="glyphicon glyphicon-log-out"></span>
            </a>  
            }

        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
